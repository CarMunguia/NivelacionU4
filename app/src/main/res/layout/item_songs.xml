<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivImagen"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvnombre"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvnombre"
       android:text="Nombre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvartista"
        app:layout_constraintLeft_toRightOf="@id/ivImagen"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artista"
        android:id="@+id/tvartista"
        app:layout_constraintBottom_toTopOf="@id/tva単o"
        app:layout_constraintTop_toBottomOf="@id/tvnombre"
        app:layout_constraintLeft_toRightOf="@id/ivImagen"
        app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tva単o"
        android:text="A単o"
        app:layout_constraintBottom_toTopOf="@id/tvgenero"
        app:layout_constraintTop_toBottomOf="@id/tvartista"
        app:layout_constraintLeft_toRightOf="@id/ivImagen"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvgenero"
        android:text="genero"
        app:layout_constraintBottom_toTopOf="@id/tvalbum"
        app:layout_constraintTop_toBottomOf="@id/tva単o"
        app:layout_constraintLeft_toRightOf="@id/ivImagen"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvalbum"
        android:text="album"
        app:layout_constraintBottom_toTopOf="@id/tvduracion"
        app:layout_constraintTop_toBottomOf="@id/tvgenero"
        app:layout_constraintLeft_toRightOf="@id/ivImagen"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvduracion"
        android:text="duracion"
        app:layout_constraintBottom_toTopOf="@id/tvpista"
        app:layout_constraintTop_toBottomOf="@id/tvalbum"
        app:layout_constraintLeft_toRightOf="@id/ivImagen"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvpista"
        android:text="pista"
        app:layout_constraintBottom_toTopOf="@id/btnfav"
        app:layout_constraintTop_toBottomOf="@id/tvduracion"
        app:layout_constraintLeft_toRightOf="@id/ivImagen"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btnfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivImagen"
        app:layout_constraintTop_toBottomOf="@id/tvpista"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>